{
  "name": "react-native-animated-spinkit",
  "description": "A pure JavaScript port of SpinKit for React Native.",
  "version": "1.3.0",
  "author": "Tien Pham",
  "main": "lib/commonjs/index.js",
  "license": "MIT",
  "scripts": {
    "example": "yarn --cwd ./example",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write 'src/**/*' 'README.md'",
    "prepare": "bob build"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn format",
      "yarn lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "react",
    "react-native",
    "spinkit",
    "expo",
    "loading"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tienph6m/react-native-animated-spinkit.git"
  },
  "devDependencies": {
    "@react-native-community/bob": "^0.7.0",
    "@types/react": "^16.9.13",
    "@types/react-native": "^0.60.23",
    "eslint": "^6.8.0",
    "eslint-config-tienph6m": "^0.2.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "prettier": "^2.0.2",
    "typescript": "^3.7.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "react-native": "src/index.ts",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "files": [
    "src",
    "lib"
  ],
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
